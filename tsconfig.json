{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5","es6"],
    "outDir": "dist",
    "allowJs":true,
    "esModuleInterop":true,
    "strict": true,
    "strictNullChecks":true,
    "skipLibCheck": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "exclude": ["node_modules/*"],
  "include": ["src/**/*"]
}